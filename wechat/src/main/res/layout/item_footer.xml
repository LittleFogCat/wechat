<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="25"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:paddingBottom="4.5dp"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="11.5sp" />

    <TextView
        android:id="@+id/txt_footer_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:paddingBottom="4.5dp"
        android:text=""
        android:textColor="@color/green"
        android:textSize="11.5sp" />

    <ImageView
        android:id="@+id/img_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_footer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6.5dp"
        android:alpha="1"
        android:scaleType="centerInside"
        android:src="@drawable/bottom_chat" />

    <ImageView
        android:id="@+id/img_footer_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_footer_fill"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6.5dp"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@drawable/bottom_chat_fill" />

</RelativeLayout>