<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/img_msg_avatar"
            android:layout_width="96px"
            android:layout_height="96px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/avatar_sample0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24px">

            <View
                android:id="@+id/divider_title_latest"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/txt_msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/divider_title_latest"
                android:text="title标题"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_msg_latest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_title_latest"
                android:layout_marginTop="3dp"
                android:text="hello你好"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="0:00"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_msg_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGray" />
</LinearLayout>